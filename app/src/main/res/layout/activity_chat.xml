<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/basicBackground">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/chatRoomRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chatRoomTopBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentPadding="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/basicBackground"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chatRoomGoBack"
                        android:layout_width="35dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardElevation="0dp"
                        app:contentPadding="3dp"
                        app:cardCornerRadius="6.5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_arrow_back_24"
                            android:tint="?attr/colorPrimary"
                            app:shapeAppearance="@style/RectComponent"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/chatRoomName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        tools:text="@tools:sample/lorem/random"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/textBold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintStart_toEndOf="@id/chatRoomGoBack"
                        app:layout_constraintEnd_toStartOf="@id/chatRoomImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chatRoomImage"
                        android:layout_width="35dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardElevation="0dp"
                        app:contentPadding="3dp"
                        app:cardCornerRadius="6.5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/chatRoomImageImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@tools:sample/avatars"
                            app:shapeAppearance="@style/RectComponent"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/chatRoomTopBarDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:dividerThickness="1dp"
                app:layout_constraintTop_toBottomOf="@id/chatRoomTopBar"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRoomRecycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chatRoomTopBarDivider"
                app:layout_constraintBottom_toTopOf="@id/chatRoomBottomCard"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chatRoomBottomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="12.5dp"
                app:cardBackgroundColor="@color/basicBackgroundAlternate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/chatRoomBottomCardOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="chatRoomChooseImage,
                        chatRoomRecordSound"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chatRoomChooseImage"
                        android:layout_width="35dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardElevation="0dp"
                        app:contentPadding="3dp"
                        app:cardCornerRadius="12.5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_image_24"
                            android:tint="?attr/colorPrimary"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chatRoomRecordSound"
                        android:layout_width="35dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardElevation="0dp"
                        app:contentPadding="3dp"
                        app:cardCornerRadius="12.5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toEndOf="@id/chatRoomChooseImage"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_mic_24"
                            android:tint="?attr/colorPrimary"/>
                    </com.google.android.material.card.MaterialCardView>

                    <EditText
                        android:id="@+id/chatRoomMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="@string/chatRoomMessageHint"
                        android:autofillHints="auto"
                        android:background="@android:color/transparent"
                        android:inputType="text|textMultiLine|textPersonName"
                        android:maxLines="4"
                        app:layout_constraintStart_toEndOf="@id/chatRoomRecordSound"
                        app:layout_constraintEnd_toStartOf="@id/chatRoomSendMessage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chatRoomSendMessage"
                        android:layout_width="35dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardElevation="0dp"
                        app:contentPadding="3dp"
                        app:cardCornerRadius="12.5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_send_24"
                            android:tint="?attr/colorPrimary"/>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
