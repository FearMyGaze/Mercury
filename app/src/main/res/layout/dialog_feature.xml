<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_resource"
    android:padding="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialogFeatureParagraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogFeatureParagraph"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialogFeatureDescError"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="@string/dialogBugHint"
        app:boxCornerRadiusBottomEnd="13dp"
        app:boxCornerRadiusBottomStart="13dp"
        app:boxCornerRadiusTopEnd="13dp"
        app:boxCornerRadiusTopStart="13dp"
        app:counterEnabled="true"
        app:counterMaxLength="300"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/dialogFeatureParagraph">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialogFeatureDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/dialogFeatureFurtherCommunication"
        style="@style/ThemeOverlay.App.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogFeatureCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogFeatureDescError" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogFeatureCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/dialogBugCancel"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@id/dialogFeatureConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogFeatureFurtherCommunication" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogFeatureConfirm"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/dialogBugConfirm"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialogFeatureCancel"
        app:layout_constraintTop_toBottomOf="@id/dialogFeatureFurtherCommunication" />

</androidx.constraintlayout.widget.ConstraintLayout>