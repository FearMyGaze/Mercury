<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackground"
    tools:context=".view.activity.Profile">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="?attr/actionBarSize"
        tools:src="@tools:sample/avatars"
        app:shapeAppearance="@style/RectComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/profileEditHelper"
        android:textAllCaps="false"
        app:cornerRadius="12.5dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"/>

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="@tools:sample/first_names"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/textBold"
        android:maxLines="1"
        android:maxLength="50"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/profileImage"/>

    <TextView
        android:id="@+id/profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="@tools:sample/last_names"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/textBold"
        android:maxLines="1"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="@id/profileName"
        app:layout_constraintTop_toBottomOf="@id/profileName"/>

    <TextView
        android:id="@+id/profileStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="@tools:sample/lorem/random"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/textBold"
        android:maxLength="144"
        app:layout_constraintStart_toStartOf="@id/profileUsername"
        app:layout_constraintEnd_toEndOf="@id/profileEdit"
        app:layout_constraintTop_toBottomOf="@id/profileUsername"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/profileExtraInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/profileStatus"
        app:layout_constraintEnd_toEndOf="@id/profileEdit"
        app:layout_constraintTop_toBottomOf="@id/profileStatus"/>

    <TextView
        android:id="@+id/profileFriendsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/generalFriends"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textBold"
        app:layout_constraintStart_toStartOf="@id/profileExtraInfo"
        app:layout_constraintTop_toBottomOf="@id/profileExtraInfo"/>

    <TextView
        android:id="@+id/profileFriendsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textBold"
        app:layout_constraintStart_toEndOf="@id/profileFriendsTitle"
        app:layout_constraintTop_toTopOf="@id/profileFriendsTitle"
        app:layout_constraintBottom_toBottomOf="@id/profileFriendsTitle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileFriendsTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>