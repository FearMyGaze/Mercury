<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackground"
    tools:context=".view.util.AccountActions.ProfileEdit">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileEditGoBack"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_arrow_back_24"
        android:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:shapeAppearance="@style/RoundedComponent"
        android:contentDescription="@string/signUpGoBack"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profileEditHelper"
        android:textColor="@color/textBold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/profileEditGoBack"
        app:layout_constraintEnd_toStartOf="@id/profileEditSave"
        app:layout_constraintTop_toTopOf="@id/profileEditGoBack"
        app:layout_constraintBottom_toBottomOf="@id/profileEditGoBack"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileEditSave"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/generalSave"
        android:textAllCaps="false"
        app:cornerRadius="12.5dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileEditGoBack"
        app:layout_constraintBottom_toBottomOf="@id/profileEditGoBack"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileEditGoBack"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileEditUserImage"
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                app:layout_constraintDimensionRatio="1:1"
                app:shapeAppearance="@style/RectComponent"
                tools:src="@tools:sample/avatars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profileEditChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/generalChoose"
                android:textAllCaps="false"
                app:cornerRadius="12.5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileEditUserImage"
                app:layout_constraintBottom_toBottomOf="@id/profileEditUserImage"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profileEditStatusError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/generalStatus"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="144"
                app:boxCornerRadiusTopStart="12.5dp"
                app:boxCornerRadiusTopEnd="12.5dp"
                app:boxCornerRadiusBottomStart="12.5dp"
                app:boxCornerRadiusBottomEnd="12.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEditUserImage">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profileEditStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="144"
                    android:inputType="text|textAutoComplete|textMultiLine"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profileEditLocationError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/generalLocation"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:boxCornerRadiusTopStart="12.5dp"
                app:boxCornerRadiusTopEnd="12.5dp"
                app:boxCornerRadiusBottomStart="12.5dp"
                app:boxCornerRadiusBottomEnd="12.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEditStatusError">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profileEditLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:inputType="text|textAutoComplete"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profileEditJobError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/generalJob"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:boxCornerRadiusTopStart="12.5dp"
                app:boxCornerRadiusTopEnd="12.5dp"
                app:boxCornerRadiusBottomStart="12.5dp"
                app:boxCornerRadiusBottomEnd="12.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEditLocationError">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profileEditJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:inputType="text|textAutoComplete"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profileEditWebsiteError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/generalWebsite"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="999"
                app:boxCornerRadiusTopStart="12.5dp"
                app:boxCornerRadiusTopEnd="12.5dp"
                app:boxCornerRadiusBottomStart="12.5dp"
                app:boxCornerRadiusBottomEnd="12.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEditJobError">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profileEditWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="999"
                    android:inputType="text|textAutoComplete"/>

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
