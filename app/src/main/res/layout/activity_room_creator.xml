<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackground"
    tools:context=".view.activity.RoomCreator">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/roomCreatorAppBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/roomCreatorToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationContentDescription="@string/signUpGoBack"
            app:title="@string/roomCreatorTitle"
            app:titleTextColor="@color/textBold"
            android:background="@color/basicBackground"
            style="@style/ToolBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/roomCreatorDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:dividerThickness="2dp"
        app:layout_constraintTop_toBottomOf="@id/roomCreatorAppBar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomCreatorUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roomCreatorDivider"
        app:layout_constraintBottom_toTopOf="@id/roomCreatorBottomDivider"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/roomCreatorBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:dividerThickness="2dp"
        app:layout_constraintBottom_toTopOf="@id/roomCreatorBottomLayer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/roomCreatorBottomLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/roomCreatorBottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/roomCreatorCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/generalCreate"
            android:textAllCaps="false"
            app:cornerRadius="12.5dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/roomCreatorBottomGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/roomCreatorSelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textBold"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/roomCreatorBottomGuideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
