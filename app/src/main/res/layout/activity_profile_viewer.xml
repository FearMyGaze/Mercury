<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileViewerSwipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackground"
    tools:context=".view.util.ProfileViewer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/profileViewerAppBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/profileViewerToolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                app:navigationContentDescription="@string/signUpGoBack"
                app:titleTextColor="@color/textBold"
                app:subtitleTextColor="@color/textBold"
                app:menu="@menu/profile_viewer_options"
                android:background="@color/basicBackground"
                style="@style/ToolBar"/>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/profileViewerAppBarDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerThickness="1dp"
            app:layout_constraintTop_toBottomOf="@id/profileViewerAppBar"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileViewerImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars"
            app:shapeAppearance="@style/RectComponent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileViewerAppBarDivider"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileViewerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/generalAdd"
            android:textAllCaps="false"
            app:cornerRadius="12.5dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileViewerImage"
            app:layout_constraintBottom_toBottomOf="@id/profileViewerImage"/>

        <TextView
            android:id="@+id/profileViewerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            tools:text="@tools:sample/lorem/random"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textBold"
            android:maxLength="160"
            app:layout_constraintStart_toStartOf="@id/profileViewerImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileViewerImage"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/profileViewerExtraInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/profileViewerStatus"
            app:layout_constraintEnd_toEndOf="@id/profileViewerStatus"
            app:layout_constraintTop_toBottomOf="@id/profileViewerStatus"/>

        <TextView
            android:id="@+id/profileViewerFriends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/generalFollowing"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/textBold"
            app:layout_constraintStart_toStartOf="@id/profileViewerStatus"
            app:layout_constraintEnd_toEndOf="@id/profileViewerStatus"
            app:layout_constraintTop_toBottomOf="@id/profileViewerExtraInfo"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileViewerRecycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileViewerFriends"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>