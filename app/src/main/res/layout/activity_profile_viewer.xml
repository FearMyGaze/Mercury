<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackground"
    tools:context=".view.util.ProfileViewer">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileViewerImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="?attr/actionBarSize"
        tools:src="@tools:sample/avatars"
        app:shapeAppearance="@style/RectComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileViewerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/generalAdd"
        android:textAllCaps="false"
        app:cornerRadius="12.5dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileViewerImage"
        app:layout_constraintBottom_toBottomOf="@id/profileViewerImage"/>
    
    <TextView
        android:id="@+id/profileViewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="@tools:sample/first_names"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/textBold"
        android:maxLines="1"
        android:maxLength="50"
        app:layout_constraintStart_toStartOf="@id/profileViewerImage"
        app:layout_constraintTop_toBottomOf="@id/profileViewerImage"/>

    <TextView
        android:id="@+id/profileViewerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="@tools:sample/last_names"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/textBold"
        android:maxLines="1"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="@id/profileViewerName"
        app:layout_constraintTop_toBottomOf="@id/profileViewerName"/>

    <TextView
        android:id="@+id/profileViewerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        tools:text="@tools:sample/lorem/random"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/textBold"
        android:maxLength="144"
        app:layout_constraintStart_toStartOf="@id/profileViewerUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileViewerUsername"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/profileViewerChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/profileViewerStatus"
        app:layout_constraintEnd_toEndOf="@id/profileViewerStatus"
        app:layout_constraintTop_toBottomOf="@id/profileViewerStatus"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>