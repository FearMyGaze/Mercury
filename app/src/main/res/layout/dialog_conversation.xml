<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_resource"
    android:padding="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogConversationDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogConversationDelete"
        android:textSize="13sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogConversationRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogConversationRemove"
        android:textSize="13sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/dialogConversationDelete"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogConversationReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogConversationReport"
        android:textSize="13sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/dialogConversationRemove"/>

</androidx.constraintlayout.widget.ConstraintLayout>