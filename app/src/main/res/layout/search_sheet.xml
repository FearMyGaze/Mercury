<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchSheetParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:nestedScrollingEnabled="true"
        android:background="@color/basicBackground"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/searchAppBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/basicBackground"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchGoBack"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/basicBackground"
                    app:contentPadding="2dp"
                    app:shapeAppearance="@style/RoundedComponent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back_24"
                        android:scaleType="fitCenter"
                        app:tint="?colorPrimary"
                        app:shapeAppearance="@style/RectComponent"/>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/searchContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:focusable="true"
                    android:background="@drawable/search_color"
                    app:layout_constraintStart_toEndOf="@id/searchGoBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_search_24"
                        android:scaleType="fitCenter"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/searchBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/textBold"
                        android:hint="@string/searchBox"
                        android:autofillHints="name"
                        android:textColorHint="#A0A0A0"
                        android:textSize="16sp"
                        android:imeOptions="actionDone"
                        android:inputType="text|textPersonName"
                        app:layout_constraintStart_toEndOf="@id/searchIcon"
                        app:layout_constraintEnd_toStartOf="@id/searchClear"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/searchClear"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/basicBackgroundAlternate"
                        app:contentPadding="2dp"
                        android:contentDescription="@string/searchClear"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_close_24"
                            android:scaleType="fitCenter"
                            app:tint="?colorPrimary"
                            app:shapeAppearance="@style/RectComponent"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/searchDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searchAppBar" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/searchCachedComps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="
            searchCachedTitle,
            searchCachedClear" />

        <TextView
            android:id="@+id/searchCachedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/searchCachedTitle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/textBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchAppBar"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/searchCachedClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:src="@drawable/ic_close_24"
            android:background="@color/basicBackgroundAlternate"
            app:shapeAppearance="@style/RoundedComponent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/searchCachedTitle"
            app:layout_constraintBottom_toBottomOf="@id/searchCachedTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchCachedProfileRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchCachedTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchCachedQueryRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/searchCachedProfileRecycler"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/searchDivider"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchErrorLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="1dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/searchAppBar"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/searchErrorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchError"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textBold"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
