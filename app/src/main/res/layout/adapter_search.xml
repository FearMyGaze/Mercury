<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterSearchRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/basicBackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/adapterSearchImage"
            android:layout_width="60dp"
            android:layout_height="0dp"
            tools:src="@tools:sample/avatars"
            app:shapeAppearance="@style/RectComponent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/adapterSearchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="@tools:sample/full_names"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/textBold"
            android:maxLines="1"
            android:maxEms="50"
            android:maxLength="50"
            app:layout_constraintStart_toEndOf="@id/adapterSearchImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/adapterSearchImage"
            app:layout_constraintBottom_toTopOf="@id/adapterSearchUsername"/>

        <TextView
            android:id="@+id/adapterSearchUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="@tools:sample/lorem/random"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            android:textColor="@color/textBold"
            android:maxLines="1"
            android:maxEms="50"
            android:maxLength="50"
            app:layout_constraintStart_toEndOf="@id/adapterSearchImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adapterSearchName"
            app:layout_constraintBottom_toBottomOf="@id/adapterSearchImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>