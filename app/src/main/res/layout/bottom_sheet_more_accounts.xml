<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/moreAccountsRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/moreAccountsDivider"
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:layout_marginTop="5dp"
        android:src="@color/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/moreAccountsAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/dialogMoreAccountsAcc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/moreAccountsDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moreAccountsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/moreAccountsAcc"
        app:layout_constraintBottom_toTopOf="@id/moreAccountsAddExisting"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/moreAccountsAddExisting"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/dialogMoreAccountsAddExisting"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/moreAccountsCreateNew"
        app:layout_constraintTop_toBottomOf="@id/moreAccountsRecycler" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/moreAccountsCreateNew"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dialogMoreAccountsCreateNew"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@id/moreAccountsAddExisting"
        app:layout_constraintEnd_toEndOf="@id/moreAccountsAddExisting"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>