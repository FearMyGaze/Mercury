<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/rounded_resource"
    android:padding="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialogProfileVerticalCenter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- TODO: Make the button Rounded -->
    <ImageButton
        android:id="@+id/dialogProfileExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dialogProfileClose"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/dialogProfileExit"
        app:layout_constraintBottom_toBottomOf="@id/dialogProfileExit"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialogProfileUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/dialogProfileImage"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileExit"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialogProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/sampleUsername"
        android:textIsSelectable="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/dialogProfileUserEmail"
        app:layout_constraintStart_toEndOf="@id/dialogProfileUserImage"
        app:layout_constraintTop_toTopOf="@id/dialogProfileUserImage"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialogProfileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/sampleEmail"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@id/dialogProfileUserImage"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileUsername"
        app:layout_constraintBottom_toBottomOf="@id/dialogProfileUserImage"/>

    <ImageButton
        android:id="@+id/dialogProfileMoreOptions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dialogProfileMoreOptions"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_menu_24"
        app:layout_constraintBottom_toBottomOf="@id/dialogProfileUserEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialogProfileUsername"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogProfileManageAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/dialogProfileManageAccount"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileMoreOptions"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogProfileManageAccountManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileManageAccount"
        app:layout_constraintBottom_toTopOf="@id/dialogProfileDivider">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/dialogProfileManageAccountGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="
            dialogProfileDivider1,
            dialogProfileManageAccountSwitchAccount,
            dialogProfileManageAccountRemoveAccount,
            dialogProfileManageAccountAddAccount"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dialogProfileDivider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:dividerThickness="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialogProfileManageAccountSwitchAccount"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialogProfileManageAccountSwitchAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/dialogProfileDivider1">

            <ImageButton
                android:id="@+id/dialogProfileManageAccountSwitchAccountImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_24"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/dialogProfileManageAccountSwitchAccount" />

            <TextView
                android:id="@+id/dialogProfileManageAccountSwitchAccountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialogProfileManageAccountSwitchAccount"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/dialogProfileManageAccountSwitchAccountImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dialogProfileManageAccountSwitchAccountImage"
                app:layout_constraintBottom_toBottomOf="@id/dialogProfileManageAccountSwitchAccountImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialogProfileManageAccountRemoveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/dialogProfileManageAccountSwitchAccount">

            <ImageButton
                android:id="@+id/dialogProfileManageAccountRemoveAccountImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_remove_24"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/dialogProfileManageAccountRemoveAccount" />

            <TextView
                android:id="@+id/dialogProfileManageAccountRemoveAccountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialogProfileManageAccountRemoveAccount"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/dialogProfileManageAccountRemoveAccountImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dialogProfileManageAccountRemoveAccountImage"
                app:layout_constraintBottom_toBottomOf="@id/dialogProfileManageAccountRemoveAccountImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialogProfileManageAccountAddAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/dialogProfileManageAccountRemoveAccount">

            <ImageButton
                android:id="@+id/dialogProfileManageAccountAddAccountImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_add_24"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/dialogProfileManageAccountAddAccount" />

            <TextView
                android:id="@+id/dialogProfileManageAccountAddAccountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialogProfileManageAccountAddAccount"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/dialogProfileManageAccountAddAccountImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dialogProfileManageAccountAddAccountImage"
                app:layout_constraintBottom_toBottomOf="@id/dialogProfileManageAccountAddAccountImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dialogProfileDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dividerThickness="2dp"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileManageAccountManager" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogProfileSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileDivider">

        <ImageButton
            android:id="@+id/dialogProfileSignOutImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person_add_24"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/dialogProfileSignOut" />

        <TextView
            android:id="@+id/dialogProfileSignOutText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialogProfileSignOut"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/dialogProfileSignOutImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialogProfileSignOutImage"
            app:layout_constraintBottom_toBottomOf="@id/dialogProfileSignOutImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dialogProfileDivider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dividerThickness="2dp"
        app:layout_constraintTop_toBottomOf="@id/dialogProfileSignOut" />

    <TextView
        android:id="@+id/dialogProfileTos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/dialogProfileTos"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialogProfileVersion"
        app:layout_constraintTop_toBottomOf="@+id/dialogProfileDivider2" />

    <TextView
        android:id="@+id/dialogProfileVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sampleVersion"
        app:layout_constraintStart_toStartOf="@id/dialogProfileVerticalCenter"
        app:layout_constraintEnd_toEndOf="@id/dialogProfileVerticalCenter"
        app:layout_constraintTop_toTopOf="@id/dialogProfileTos"/>

    <TextView
        android:id="@+id/dialogProfileChangelog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogProfileChangelog"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="@id/dialogProfileTos"
        app:layout_constraintStart_toEndOf="@id/dialogProfileVersion"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>