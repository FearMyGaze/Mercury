<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/requestsSheetParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:background="@color/basicBackground"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/requestsSheetToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/requestsSheetGoBack"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_back_24"
                android:tint="?attr/colorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:shapeAppearance="@style/RoundedComponent"
                android:contentDescription="@string/signUpGoBack"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:text="Follower Requests"
                android:textColor="@color/textBold"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/requestsSheetGoBack"
                app:layout_constraintTop_toTopOf="@id/requestsSheetGoBack"
                app:layout_constraintBottom_toBottomOf="@id/requestsSheetGoBack"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/requestsSheetDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:dividerThickness="2dp"
                app:layout_constraintTop_toBottomOf="@id/requestsSheetGoBack"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/requestsSheetTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basicBackgroundAlternate"
            app:layout_constraintTop_toBottomOf="@id/requestsSheetToolBar"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/requestsSheetViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/requestsSheetTabLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>