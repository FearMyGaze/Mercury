<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackgroundAlternate"
    tools:context=".view.activity.MyProfile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/myProfileAppBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:elevation="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/myProfileGoBack"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_arrow_back_24"
                app:tint="?colorPrimary"
                android:scaleType="fitCenter"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/signUpGoBack"
                app:shapeAppearance="@style/RoundedComponent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/myProfileShare"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_share_24"
                app:tint="?colorPrimary"
                android:scaleType="fitCenter"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="shareProfile"
                app:shapeAppearance="@style/RoundedComponent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/myProfileAppBarDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myProfileAppBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myProfileUserComps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/myProfileAppBarDivider">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/myProfileUserImage"
            android:layout_width="90dp"
            android:layout_height="0dp"
            app:shapeAppearance="@style/RectComponent"
            tools:src="@tools:sample/avatars"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/myProfileUserFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/textBold"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/myProfileUserImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/myProfileUserImage"
            app:layout_constraintBottom_toTopOf="@id/myProfileUserHandle"/>

        <TextView
            android:id="@+id/myProfileUserHandle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/textBold"
            android:textStyle="bold|italic"
            android:maxLines="1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/myProfileUserFullName"
            app:layout_constraintTop_toBottomOf="@id/myProfileUserFullName"
            app:layout_constraintBottom_toBottomOf="@id/myProfileUserImage"/>

        <TextView
            android:id="@+id/myProfileUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="@tools:sample/lorem/random"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/textBold"
            android:maxLength="160"
            app:layout_constraintTop_toBottomOf="@id/myProfileUserImage"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/myProfileUserMoreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/myProfileUserBio" />

        <TextView
            android:id="@+id/myProfileFriendsCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/textBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/myProfileFriendsTitle"
            app:layout_constraintBottom_toBottomOf="@id/myProfileFriendsTitle"/>

        <TextView
            android:id="@+id/myProfileFriendsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Friends"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/textBold"
            app:layout_constraintStart_toEndOf="@id/myProfileFriendsCounter"
            app:layout_constraintTop_toTopOf="@id/myProfileEditProfile"
            app:layout_constraintBottom_toBottomOf="@id/myProfileEditProfile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/myProfileEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Edit"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myProfileUserMoreInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/myProfileUserComps"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myProfileFriendList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/myProfileFriendListError"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="#ECCBCC"
            android:visibility="gone"
            android:contentDescription="Friend List error"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
