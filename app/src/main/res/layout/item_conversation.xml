<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterConversationRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/adapterConversationImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TODO: Add online/offline shapeAbleImageView -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/adapterConversationUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceBody1"
        android:text="@string/sampleUsername"
        app:layout_constraintStart_toEndOf="@+id/adapterConversationImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adapterConversationLastMessage"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/adapterConversationLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:text="@string/sampleLastMessage"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@+id/adapterConversationUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapterConversationImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/adapterConversationDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/adapterConversationDiv"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintStart_toEndOf="@+id/adapterConversationLastMessage"
        app:layout_constraintEnd_toStartOf="@+id/adapterConversationTime"
        app:layout_constraintTop_toTopOf="@+id/adapterConversationLastMessage"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/adapterConversationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/sampleTime"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintStart_toEndOf="@+id/adapterConversationDiv"
        app:layout_constraintTop_toTopOf="@id/adapterConversationLastMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>